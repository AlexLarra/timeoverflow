.row
  .span8

    %h1
      Listing categories
      %small

    .navbar
      .navbar-inner
        %ul.nav
          %a.btn.btn-primary{href: "/categories/new"} New category
        %form.navbar-search.pull-left
          %input.search-query{"type" => "text", "placeholder" => "Search", "ng-model" => "searchTerm"}

    %table.table.table-hover.table-condensed
      %thead
        %tr
          %th name
      %tbody
        %tr{"ng-repeat" => "cat in ( categories | filter:searchTerm | orderBy:fqn )"}
          %td
            %a{href: "/categories/{{ cat.id }}"} {{ cat.fqn }}

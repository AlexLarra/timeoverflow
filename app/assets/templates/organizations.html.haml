.row
  .span8
    .navbar
      .navbar-inner
        .brand Listing organizations
        %form.navbar-search
          %input.search-query{"type" => "text", "placeholder" => "Search", "ng-model" => "searchTerm"}
        %ul.nav.pull-right
          %a.btn.btn-primary{href: "/organizations/new"} New organization

    %table.table.table-hover.table-condensed
      %thead
        %tr
          %th name
      %tbody
        %tr{"ng-repeat" => "org in ( organizations | filter:searchTerm | orderBy:'name' )"}
          %td
            %a{href: "/organizations/{{ org.id }}"} {{ org.name }}

%h1
  =t(".maintitle")

  = form_tag "/tags/alpha_grouped_index?post_type=inquiry", remote: true do
    .btn-group{"data-toggle" => "buttons"}
      %label.btn.btn-primary.active
        = radio_button_tag 'switch_offer','offer', :checked => true,:onclick => "this.form.submit();"
        = Offer.model_name.human(count: :many)
      %label.btn.btn-primary
        = radio_button_tag 'switch_inquiry','inquiry',:onclick => "this.form.submit();"
        = Inquiry.model_name.human(count: :many)
      = submit_tag 'submit'

.alpha_tag_list
  = render :partial => 'grouped_index', :locals => { :alpha_tags => @alpha_tags }

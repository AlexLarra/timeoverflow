- content_for :breadcrumb do
  %li
    = link_to root_path do
      %i.icon-home
    %span.divider •
  %li
    = link_to users_path do
      %i.icon-user
      = t "application.nav.users"
    %span.divider •
  %li.active= @user.username

- content_for :title do
  = @user.username

- content_for :subtitle do
  = @user.email
  - if @user.superadmin?
    %span.label.label-important= t ".superadmin"
  - if @user.admin
    %span.label.label-warning= t ".admin"


%ul.nav.nav-pills
  - if current_user == @user or admin?
    %li
      %a{href: edit_user_path(@user)}
        %i.icon-pencil
        = t "edit"
  - if admin?
    %li
      %a{href: user_path(@user), data: {method: :delete, confirm: t("are_you_sure") }}
        %i.icon-trash
        = t "delete"
  %li
    %a{href: give_time_user_path(@user)}
      %i.icon-time
      = t "give time"

.row-fluid
  .span4
    %h2= t ".data"
    %dl.dl-horizontal
      %dt= User.human_attribute_name(:organization)
      %dd= link_to @user.organization.name, @user.organization

      %dt= User.human_attribute_name(:registration_number)
      %dd= @user.registration_number
      %dt= User.human_attribute_name(:registration_date)
      %dd= l @user.registration_date rescue "-"
      %dt= User.human_attribute_name(:date_of_birth)
      %dd= l @user.date_of_birth rescue "-"
      %dt= User.human_attribute_name(:identity_document)
      %dd= @user.identity_document || "-"
      - phones = [@user.phone, @user.alt_phone].map(&:presence).compact
      %dt= t(".phone", count: phones.size)
      %dd
        - phones.each_with_index do |ph, idx|
          - unless idx.zero?
            &mdash;
          = ph

  / .span4
  /   %h2 t ".categories"
  /   %ul.unstyled
  /     - @user.categories.each do |cat|
  /       %li= cat.fqn

  .span4
    %h2= t ".offers"
    %ul
      - @user.joined_posts.offers.each do |offer|
        %li
          = link_to(offer.title, offer)
          = link_to(give_time_user_path(@user, offer: offer.id), {:class => "btn btn-success btn-mini"}) do
            %i.icon-time
            = t ".give_time_for"


  .span4
    %h2
      = t ".account"
      %small
        = succeed ":" do
          = t ".balance"
        = @user.account.balance
    %table.table
      - @user.account.movements.order("created_at DESC").limit(10).each do |mv|
        %tr
          %td= l mv.created_at, format: :short
          %td= mv.transfer.post || mv.transfer.reason
          %td= mv.amount




= render "shared/post", post: @offer

%p.actions

  - if admin? or @inquiry.user == current_user
    = link_to edit_offer_path(@inquiry), class: "btn btn-warning" do
      = glyph :pencil
      = t ".edit"

    = link_to @inquiry, data: {method: :DELETE, confirm: "sure?" }, :class => "btn btn-danger" do
      = glyph :trash
      = t ".delete"


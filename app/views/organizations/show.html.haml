%h1
  = @organization.name

%ul.nav.nav-pills
  %li
    %a{href: organizations_path}
      %span.glyphicon.glyphicon-hand-left
      = t 'global.back'
  - if admin?
    %li
      %a{href: edit_organization_path(@organization)}
        %span.glyphicon.glyphicon-pencil
        = t "global.edit"
  - if superadmin?
    %li
      %a{href: organization_path(@organization), data: {method: :DELETE, confirm: t("are_you_sure") }}
        %span.glyphicon.glyphicon-trash
        = t "global.delete"
  %li
    %a{href: give_time_organization_path(@organization)}
      %span.glyphicon.glyphicon-time
      = t "global.give_time"


%dl
  %dt= Organization.human_attribute_name("created_at")
  %dd= l @organization.created_at
  %dt= Organization.human_attribute_name("updated_at")
  %dd= l @organization.updated_at
  %dt= Organization.human_attribute_name("reg_number_seq")
  %dd= @organization.reg_number_seq

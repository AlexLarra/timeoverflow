%li.nav-header= t ".administration"
%li{class: ('active' if current_page? controller: "organizations")}
  %a{href: organizations_path}
    %i.icon-group.icon-fixed-width
    = Organization.model_name.human(count: :many)
%li{class: ('active' if current_page? controller: "categories")}
  %a{href: categories_path}
    %i.icon-tags.icon-fixed-width
    = Category.model_name.human.pluralize
%li{class: ('active' if current_page? controller: "users")}
  %a{href: users_path}
    %i.icon-user.icon-fixed-width
    = User.model_name.human.pluralize

%li.nav-header= t ".reports"
%li
  %a{href: "/report/cat_with_users", data: {popup: true}}
    %i.icon-list-alt.icon-fixed-width
    = t "reports.cat_with_users.title"
%li
  %a{href: "/report/user_list", data: {popup: true}}
    %i.icon-list-alt.icon-fixed-width
    = t "reports.user_list.title"
